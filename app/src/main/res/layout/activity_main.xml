<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/windmillBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spin"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/spinBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Windmill"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/diagonalBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagonal"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/splitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Split"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/shrinkBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shrink"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/cardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/inandoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In And Out"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/swipeleftBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Left"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/swiperightBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Right"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/sliderleftBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slide Left"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/sliderightBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slide Right"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/slideupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slide Up"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/slidedownBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slide Down"
            android:onClick="mainBtn"></Button>

        <Button
            android:id="@+id/zoomBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zoom"
            android:onClick="mainBtn"></Button>
        <Button
            android:id="@+id/fadeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fade"
            android:onClick="mainBtn"></Button>


    </LinearLayout>

</ScrollView>